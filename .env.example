# =============================================================================
# NR Tickets Application Configuration
# =============================================================================
# Copy this file to .env and update values for your local environment.
# For Docker environments, ensure DB_HOST matches your docker-compose service name.
# =============================================================================

APP_NAME="NR Tickets"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# Timezone for date/time handling (CDMX)
APP_TIMEZONE=America/Mexico_City
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_MX

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# Database Configuration (MySQL)
# =============================================================================
# For Docker: DB_HOST should be your mysql container service name (e.g., "mysql" or "db")
# For local: use "127.0.0.1" or "localhost"
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nr_tickets
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
# Use public disk for evidence images
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Branding Configuration
# =============================================================================
# These values configure the application branding
# =============================================================================
BRANDING_APP_NAME="NR Tickets"
BRANDING_COMPANY_NAME="NR Impuestos"
# Max file size for evidence images in KB (default: 5120 = 5MB)
EVIDENCE_MAX_SIZE_KB=5120

VITE_APP_NAME="${APP_NAME}"
